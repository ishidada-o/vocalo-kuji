<body>
  <h1>🎤 くじボカお題ジェネレーター 🎲</h1>
  <button onclick="drawThemes()">お題を引く！</button>
  <div id="themeContainer">
    <!-- お題枠3つ -->
    <div class="themeBox" id="theme1"></div>
    <div class="themeBox" id="theme2"></div>
    <div class="themeBox" id="theme3"></div>
  </div>
  <button onclick="tweetThemes()">Twitterでシェア</button>

  <script>
    // カテゴリ別お題リスト
    const categories = {
      real: [
        {name: "春", url:"#"}, {name: "冬", url:"#"}, {name: "海", url:"#"}, {name: "図書館", url:"#"}, {name: "花火", url:"#"}
      ],
      abstract: [
        {name: "希望", url:"#"}, {name: "孤独", url:"#"}, {name: "夢", url:"#"}, {name: "未来", url:"#"}, {name: "恋", url:"#"}
      ],
      constraint: [
        {name: "3分以内", url:"#"}, {name: "2分以内", url:"#"}, {name: "サビ歌詞無し", url:"#"}, {name: "転調", url:"#"}
      ]
    };

    function drawThemes() {
      // 3個ランダムに抽選
      const keys = Object.keys(categories);
      keys.forEach((key, index) => {
        let arr = categories[key];
        let picked = arr[Math.floor(Math.random() * arr.length)];
        const box = document.getElementById(`theme${index+1}`);
        box.innerHTML = `<a href="${picked.url}" target="_blank">${picked.name}</a>`;
        // アニメーション
        box.style.opacity = 0;
        box.style.transform = "translateY(-20px)";
        setTimeout(() => { box.style.transition = "all 0.5s ease"; box.style.opacity = 1; box.style.transform = "translateY(0)"; }, index*500); // ﾃﾞﾝｯﾃﾞﾝｯﾃﾞﾝｯ
      });
    }

    function tweetThemes() {
      const container = document.getElementById("themeContainer");
      html2canvas(container).then(canvas => {
        const imgData = canvas.toDataURL("image/png");
        // 新しいタブで画像表示してTwitterにアップロード可能
        const w = window.open();
        w.document.write('<img src="' + imgData + '"/>');
        alert("この画像を保存してTwitterに投稿してください！");
      });
    }
  </script>
</body>
</html>
